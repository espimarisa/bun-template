{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",

	"files": {
		"ignore": ["**/node_modules/*", "**/dist/*"],
		"ignoreUnknown": true
	},
	"formatter": {
		"ignore": ["**/node_modules/*", "**/dist/*"],
		"enabled": true,
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"linter": {
		"ignore": ["**/node_modules/*", "**/dist/*"],
		"enabled": true,
		"rules": {
			"all": true
		}
	},
	"organizeImports": {
		"ignore": ["**/node_modules/*", "**/dist/*"],
		"enabled": true
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	}
}
